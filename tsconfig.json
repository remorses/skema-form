{
  "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "lib": [
          "es2017",
          "es7",
          "es6",
          "dom"
      ],
      "declaration": true,
      "outDir": "dist",
      "strict": false,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "jsx": "react",
      "sourceMap": true
  },
  "include": [
      "src", "src/components"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "example"
  ]
}